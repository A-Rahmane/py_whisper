# Application
APP_NAME=transcription-service
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_MODEL_DIR=./models

# File Processing
MAX_FILE_SIZE=1073741824
MAX_DURATION=3600
TEMP_DIR=./temp
CLEANUP_INTERVAL=3600

# Security
ENABLE_RATE_LIMIT=true
RATE_LIMIT_PER_MINUTE=30

# Async Processing
ENABLE_ASYNC=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
JOB_RESULT_TTL=86400
MAX_JOB_RETRY=3
JOB_RETRY_DELAY=60