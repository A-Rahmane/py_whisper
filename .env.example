# Application
APP_NAME=transcription-service
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_MODEL_DIR=./models

# File Processing
MAX_FILE_SIZE=1073741824
MAX_DURATION=10800
TEMP_DIR=./temp
CLEANUP_INTERVAL=3600

# Security
ENABLE_RATE_LIMIT=true
RATE_LIMIT_PER_MINUTE=30